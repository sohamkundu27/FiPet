{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "types/quest": ["../src/types/quest.ts"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ]
}
